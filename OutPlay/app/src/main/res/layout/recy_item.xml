<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:id="@+id/layout_relat">

    <TextView
        android:id="@+id/get_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/tv_recy_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_username"
        android:paddingTop="10dp"
        android:textSize="20sp"
        />

    <TextView android:id="@+id/show_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recy_headline"
        android:text="喜欢"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/get_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recy_headline"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/show_like"/>
</RelativeLayout>
    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        />
</RelativeLayout>